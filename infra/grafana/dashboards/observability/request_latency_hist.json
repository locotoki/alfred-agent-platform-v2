{
  "dashboard": {
    "id": null,
    "uid": "obs-v2-latency",
    "title": "Observability v2 - Request Latency",
    "tags": ["observability", "performance", "slo"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "query": "label_values(up, env)",
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": false,
          "refresh": 1,
          "sort": 1
        },
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up{env=\"$environment\"}, job)",
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          },
          "includeAll": true,
          "multi": true,
          "refresh": 1,
          "sort": 1
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Latency Histogram (P50/P95/P99)",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 24,
          "h": 8
        },
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum by (le) (rate(http_request_duration_seconds_bucket{env=\"$environment\",job=~\"$service\"}[5m])))",
            "legendFormat": "P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum by (le) (rate(http_request_duration_seconds_bucket{env=\"$environment\",job=~\"$service\"}[5m])))",
            "legendFormat": "P95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum by (le) (rate(http_request_duration_seconds_bucket{env=\"$environment\",job=~\"$service\"}[5m])))",
            "legendFormat": "P99",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "opacity",
              "spanNulls": false,
              "showPoints": "never",
              "stacking": {
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "line"
              }
            },
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.5
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            },
            "links": [
              {
                "title": "View logs",
                "url": "/explore?left={\"datasource\":\"loki\",\"queries\":[{\"expr\":\"{app=\\\"$service\\\",env=\\\"$environment\\\"}\"}],\"range\":{\"from\":\"$__from\",\"to\":\"$__to\"}}"
              }
            ]
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          }
        },
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "s",
            "label": "Response Time",
            "logBase": 1,
            "show": true
          }
        ]
      },
      {
        "id": 2,
        "title": "Latency Distribution Heatmap",
        "type": "heatmap",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "targets": [
          {
            "expr": "sum by (le) (rate(http_request_duration_seconds_bucket{env=\"$environment\",job=~\"$service\"}[5m]))",
            "format": "heatmap",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ],
        "options": {
          "calculate": false,
          "cellGap": 1,
          "color": {
            "scheme": "Spectral",
            "steps": 128,
            "reverse": false,
            "min": 0,
            "max": null
          },
          "tooltip": {
            "show": true,
            "yHistogram": true
          },
          "yAxis": {
            "axisLabel": "Response Time",
            "axisPlacement": "left",
            "decimals": 2,
            "reverse": false,
            "unit": "s"
          }
        },
        "yBucketBound": "upper"
      }
    ]
  }
}